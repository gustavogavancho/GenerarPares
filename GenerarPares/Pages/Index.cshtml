@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h4>Generar números pares:</h4>
<hr />
<h6>Ingrese un número entre 50 y 500</h6>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Objeto.Numero" class="form-control" />
                <span asp-validation-for="Objeto.Numero" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Generar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.Objeto is not null)
{
    <div class="row" style="position:absolute;margin-top:10px;margin-right:20px">
        <h5>Resultado:</h5>
        <p>@Model.Objeto?.Resultado</p>
    </div>
}

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}